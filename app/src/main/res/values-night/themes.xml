<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ShortTasks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#b47c51</item>
        <item name="colorPrimaryVariant">#e8ab7e</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#b47c51</item>
        <item name="colorSecondaryVariant">#e8ab7e</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- working wrong with snackbar <item name="android:windowBackground">#22221A</item>-->
        <item name="android:textColor">#ffffff</item>
        <item name="android:colorEdgeEffect">#22221A</item>
        <!--<item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>-->
    </style>

    <!-- Outlined Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialButtonStyle">?attr/materialButtonOutlinedStyle</item>
        <item name="android:insetTop">@dimen/margin_button</item>
        <item name="android:insetBottom">@dimen/margin_button</item>
        <item name="android:insetRight">@dimen/margin_button</item>
        <item name="android:insetLeft">@dimen/margin_button</item>
        <item name="android:padding">@dimen/padding_button</item>
    </style>

