<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_layout">

    <!-- Text HOW TO ADD -->
    <TextView
        android:id="@+id/text_how_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_tap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/size_title_text"
        android:text="@string/how_to_add_your_button"
        android:textAlignment="center"
        android:layout_margin="10dp"/>

    <!-- Text TAP -->
    <TextView
        android:id="@+id/text_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_app_which_you_want_n_note_you_can_add_only_one_app"
        android:textSize="@dimen/size_first"
        android:layout_margin="@dimen/margin_text"
        app:layout_constraintTop_toBottomOf="@id/text_how_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/understand_first_add"/>

    <!-- Button UNDERSTAND -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/understand_first_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_tap"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/understand"/>

</androidx.constraintlayout.widget.ConstraintLayout>